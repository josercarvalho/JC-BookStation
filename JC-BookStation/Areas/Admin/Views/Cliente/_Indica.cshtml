@model List<JC_BookStation.Data.Models.Clientes>

<div class="row ">
    <div class="col-md-7 col-xs-8">
        <h4><b>Indicados por </b> - @ViewBag.Indicante</h4>
    </div>
    <div class="col-md-5 col-sm-3 text-right">
        @Html.ActionLink("OK", "Index", "Cliente", null, new { @class = "btn btn-success", @title = "OK" })
    </div>

    <table class="table table-hover table-responsive">
        <thead>
            <tr>
                <th>#</th>
                <th>Nome</th>
                <th>Telefone</th>
                <th>Celular</th>
                <th>E-mail</th>
                <th>Dt.Cadastro</th>
            </tr>
        </thead>
        <tbody>
            @if (!@Model.Any())
            {
                <tr><td colspan="6" class="text-center"><em>Sem indicações!</em></td></tr>
            }
            else
            {

                foreach (var item in @Model) // (IEnumerable<JC_BookStation.Models.Clientes>)ViewBag.ClientesIndicados)
                {
                    <tr>
                        <td>
                            @item.IdCliente.ToString("0000")
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Telefone)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Celular)
                        </td>
                        <td>
                            @Html.DisplayFor(nodelintem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DataCadastro)
                        </td>
                    </tr>
                }
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="6"><b>Total de Indicações: </b><span>@ViewBag.IndicadosTotal</span></td>
            </tr>
        </tfoot>
    </table>
</div>
