@model JC_BookStation.Data.Models.Clientes

@{
    ViewBag.Title = "Editar Cliente";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Editar Clientes</h2>
@*<hr />*@

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal dados">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.IdCliente)

        <div class="form-group">
            @Html.LabelFor(model => model.IdGrupo, "Grupo de Clientes", new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.DropDownList("IdGrupo", null, "Selecione...", new { @class = "form-control", @autofocus = "autofocus" })
                @Html.ValidationMessageFor(model => model.IdGrupo)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Nome, new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.TextBoxFor(model => model.Nome, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Nome)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NomeFantasia, "Nome de Fantasia", new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.TextBoxFor(model => model.NomeFantasia, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.NomeFantasia)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IdIndica, "Indicação", new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @*@Html.DropDownList("IdIndica", null, "Sem Indicação...", new { @class = "form-control" })*@
                @Html.TextBoxFor(model => model.IdIndica, new { @class = "form-control", @data_provide = "typeahead", @data_autocomplete = @Url.Action("SearchCliente", "Cliente"), @autocomplete = "off" })
                @Html.ValidationMessageFor(model => model.IdIndica)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Nascimento, "Data de Nascimento", new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.TextBoxFor(model => model.Nascimento, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Nascimento)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CPF, new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.TextBoxFor(model => model.CPF, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CPF)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.RG, new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.TextBoxFor(model => model.RG, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.RG)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.InscEstadual, "Inscrição Estadual", new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.TextBoxFor(model => model.InscEstadual, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.InscEstadual)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Email, "Login de Acesso", new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Email)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Senha, "Senha de Acesso", new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.TextBoxFor(model => model.Senha, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Senha)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Telefone, new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.TextBoxFor(model => model.Telefone, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Telefone)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Celular, new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.TextBoxFor(model => model.Celular, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Celular)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Contato, new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.TextBoxFor(model => model.Contato, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Contato)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Endereco, "Endereço", new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.TextBoxFor(model => model.Endereco, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Endereco)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Bairro, new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.TextBoxFor(model => model.Bairro, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Bairro)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Estado, new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @*@Html.DropDownListFor(model => model.Estado, new SelectList(ViewBag.Estados as System.Collections.IEnumerable, "cod_estado", "nom_estado"), "Selecione o Estado", new { @id = "ddlEstados", @class = "form-control" })*@
                @Html.DropDownList("Estado", null, " -- Selecione o estado -- ", htmlAttributes: new { @id = "ddlEstados", @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Estado)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Cidade, new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @*@Html.DropDownListFor(model => model.Cidade, new SelectList(ViewBag.Cidades as System.Collections.IEnumerable, "cod_cidade", "nom_cidade"), "Selecione a Cidade", new { @id = "ddlCidades", @class = "form-control" })*@
