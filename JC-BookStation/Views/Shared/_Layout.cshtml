<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Distribuidora de Livros e Material Didático Infantil ">
    <meta name="author" content="JCarvalho TI">
    <title>@ViewBag.Title -> Book Station </title>

    <!-- Le styles -->
    @Styles.Render("~/Content/website")
    <link href="~/Content/docs.css" rel="stylesheet" />

    <!-- Le javascript -->
    <!-- Placed at the end of the document so the pages load faster -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @*<link href="~/Content/MenuColor.css" rel="stylesheet" />*@
    <script src="~/MyJS/BotaoInicioPagina.js"></script>
    <script src="~/MyJS/MenuFixo.js"></script>

</head>
<body>

    <header class="container">
        @Html.Partial("_Topo")
    </header>

    <nav id="nav">
        @Html.Partial("_Menu")
    </nav>

    <section id="corpo" class="container body-content">
        @RenderBody()
        <a id="back-to-top" href="#" class="btn btn-primary btn-lg back-to-top" role="button" title="Click para retornar ao topo da página" data-toggle="tooltip" data-placement="left"><span class="glyphicon glyphicon-chevron-up"></span></a>
    </section>

    <footer class="container">
        @Html.Partial("_Footer")
    </footer>

    @RenderSection("scripts", required: false)
</body>
</html>
